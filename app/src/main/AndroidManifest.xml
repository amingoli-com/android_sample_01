        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Slide_Adapter" android:label="Slide Adapter"/>
        <activity android:name=".MainActivity" android:label="Main Activity"/>
        <activity android:name=".Tickets" />
        <activity android:name=".SingUp" />
        <activity android:name=".Support_AddTicket" />
